<div class="banner h-100" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @universe.banner_url %>');">
  <div class="container text-center">
    <h1><%= @universe.name %></h1>
  </div>
</div>

<div class="container my-5">
  <div class="row">
    <div class="col">
      <div class="cards">
        <% @universe.characters.each do |character| %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= character.photo_url %>')">
            <%= character.name %>
            <%= link_to "+", character_path(character), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
            <div class="card-tags">
              <% character.tags.each do |tag| %>
                <span><%= tag.name %></span>
              <% end %>
              <%= link_to "+", new_character_character_tag_path(character) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- form -->
<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h4>Add a character:</h4>
      <%= simple_form_for [@universe, @character] do |f| %>
        <%= f.input :name %>
        <%= f.input :photo_url %>
        <%= f.submit "Add", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
<%= link_to 'Back', universes_path %>
